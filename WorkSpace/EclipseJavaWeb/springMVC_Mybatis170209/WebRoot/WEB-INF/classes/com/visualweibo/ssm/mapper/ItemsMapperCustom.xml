<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.visualweibo.ssm.mapper.ItemsMapper" >
   <!-- 定义商品查询的sql片段 -->
   <sql id="query_items_where">
     <!-- 使用动态sql， 通过if判断，满足条件进行sql查询(name不等于空（null）或不等于空字符串)-->
      <if test="itemsCustom != null">
          <!-- $符号表示字符串拼接 -->
         <if test="itemsCustom.name != null and itemsCustom.name != ''">
          items.name LIKE '%${itemsCustom.name}%'   
         </if>
       
      </if>
    
   </sql>
   
   
   
   <!-- 商品列表查询
    parameterType传入包装对象(包含了查询条件)
    resultType建议使用扩展对象
    -->
   <select id="findItemsList" parameterType="com.visualweibo.ssm.po.ItmesQueryVo" resultType="com.visualweibo.ssm.po.ItemsCustom">
      SELECT * FROM items 
      <where>
         <include refid="query_items_where"></include>
      </where>
   
   </select>
</mapper>